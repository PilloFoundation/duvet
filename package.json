{
  "name": "duvetjs",
  "type": "module",
  "version": "0.6.1",
  "description": "An extensible and opinionated tool for building nodejs backend apps faster",
  "main": "dist/cjs",
  "module": "dist/esm",
  "types": "dist/types",
  "exports": {
    ".": {
      "import": "./dist/esm",
      "require": "./dist/cjs"
    }
  },
  "author": "Pillo",
  "repository": {
    "type": "git",
    "url": "https://github.com/PilloFoundation/duvet"
  },
  "license": "MIT",
  "scripts": {
    "prepare": "node .husky/install.js && husky install",
    "build": "rimraf ./dist && yarn build:esm && yarn build:cjs",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "lint": "eslint .",
    "test": "jest --coverage",
    "test:unit": "jest --coverage --testPathIgnorePatterns=/e2e/",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@eslint/js": "^9.4.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/mime": "^4.0.0",
    "@types/node": "^20.12.2",
    "cookie-parser": "^1.4.6",
    "eslint": "^9.4.0",
    "eslint-plugin-jsdoc": "^48.2.9",
    "eslint-plugin-no-type-assertion": "^1.3.0",
    "eslint-plugin-spellcheck": "^0.0.20",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": ">=10",
    "nodemon": "^3.1.0",
    "pinst": "^3.0.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.7",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.13.0"
  },
  "dependencies": {
    "@types/supertest": "^6.0.2",
    "express": "^4.19.2",
    "zod": "3.22.4"
  }
}
