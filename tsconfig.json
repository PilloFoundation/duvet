{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",

    "rootDirs": ["src"],
    "baseUrl": "src",

    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["dev-playground/**"]
}
